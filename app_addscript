	echo "Installing {0} from {1} to {2}"

	echo "  downloading sources"
	mkdir /var/rails_apps/{0}
	cd /var/rails_apps/{0}
	git init
	git remote add origin {1}
	git pull origin master

	echo "  preparing application (bundle, rake tasks)"
	chmod 777 /var/rails_apps/{0} -R
	#sh /var/rails_apps/{0}/STARTME > /dev/null 2>&1 || true

	echo "  creating virtual host"
	echo "<VirtualHost *:80>
		ServerName {2}
		DocumentRoot /var/rails_apps/{0}{3}
		<Directory /var/rails_apps/{0}{3}>
		   AllowOverride all
		   Options -MultiViews
		</Directory>
	</VirtualHost>
	" > /etc/httpd/virtual_hosts/{4}{0}.conf


